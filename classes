


#include <iostream>
#include "string"
using namespace std;

class human
{
public:
    string name;
    int age;
    void IntroduceSelf()
    {
        cout << "I am " + name << " and am ";
        cout << age << " years old" << endl;
    }
};
int main()
{
    human firstMan;
    firstMan.name = " Adam";
    firstMan.age = 30;

    human firstWoman;
    firstWoman.name = " Eve";
    firstWoman.age = 28;

    firstMan.IntroduceSelf();
    firstWoman.IntroduceSelf();

}
